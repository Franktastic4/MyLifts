<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    android:id="@+id/fragment_exercise_instance"
    >

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/ExerciseLogListView"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="18sp"
        android:paddingTop="12sp"
        android:layout_weight=".01"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="horizontal"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:layout_gravity="center_horizontal"
      android:paddingLeft="12sp"
      android:paddingRight="12sp"
      android:id="@+id/exercise_Instance_XML">

      <NumberPicker
          android:id="@+id/set"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1">
      </NumberPicker>

      <NumberPicker
          android:id="@+id/reps"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1">
      </NumberPicker>

      <NumberPicker
          android:id="@+id/weight"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1">
      </NumberPicker>


  </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10sp"
        android:paddingBottom="40dp">

    <Button
        android:id="@+id/logExerciseInstanceButton"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:text="@string/add_exerciseInstance_done"
        android:layout_weight="1"
        android:onClick="logExerciseInstanceDone"
        />

    <Button
        android:id="@+id/logExerciseInstanceUndo"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:text="@string/add_exerciseInstance_undo"
        android:layout_weight="1"
        android:onClick="logExerciseInstanceUndo"
        />

    </LinearLayout>


</LinearLayout>